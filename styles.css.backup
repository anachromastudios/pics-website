/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Helvetica Neue', Arial, sans-serif;
    color: #333;
    line-height: 1.6;
    background-color: #fff;
}

/* Navigation */
.navbar {
    background-color: #fff;
    padding: 1rem 2rem;
    border-bottom: 1px solid #e0e0e0;
    position: sticky;
    top: 0;
    z-index: 1000;
}

.nav-container {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 1.5rem;
    font-weight: bold;
    text-decoration: none;
    color: #333;
    letter-spacing: 2px;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
}

.nav-menu a {
    text-decoration: none;
    color: #333;
    font-size: 0.9rem;
    letter-spacing: 1px;
    transition: color 0.3s;
}

.nav-menu a:hover {
    color: #666;
}

.nav-actions {
    display: flex;
    gap: 1rem;
    align-items: center;
}

.btn-icon {
    background: none;
    border: none;
    font-size: 0.9rem;
    cursor: pointer;
    padding: 0.5rem 1rem;
    transition: opacity 0.3s;
}

.btn-icon:hover {
    opacity: 0.7;
}

/* Hero Section */
.hero {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 5rem 2rem;
    text-align: center;
}

.hero-content h1 {
    font-size: 3.5rem;
    letter-spacing: 6px;
    margin-bottom: 1rem;
    font-weight: 300;
}

.hero-subtitle {
    font-size: 1rem;
    letter-spacing: 3px;
    opacity: 0.92;
    font-weight: 300;
}

/* Main Content */
.main-content {
    max-width: 1600px;
    margin: 3rem auto;
    padding: 0 2rem;
}

.content-wrapper {
    display: grid;
    grid-template-columns: 260px 1fr;
    gap: 3.5rem;
}

/* Filters Sidebar */
.filters-sidebar {
    position: sticky;
    top: 100px;
    height: fit-content;
}

.filters-sidebar h2 {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    letter-spacing: 2px;
    font-weight: 400;
}

.filter-group {
    margin-bottom: 1.5rem;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 1rem;
}

.filter-header {
    width: 100%;
    background: none;
    border: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 500;
    padding: 0.5rem 0;
    text-align: left;
}

.filter-header:hover {
    opacity: 0.7;
}

.filter-content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1rem;
    padding-left: 0.5rem;
}

.filter-content label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: 0.9rem;
}

.filter-content input[type="checkbox"] {
    cursor: pointer;
}

/* Products Section */
.products-section {
    width: 100%;
}

.products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 4rem;
}

.product-card {
    position: relative;
    cursor: pointer;
    transition: transform 0.3s, box-shadow 0.3s;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
}

.product-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background-color: #667eea;
    color: white;
    padding: 0.4rem 0.9rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 20px;
    z-index: 10;
    letter-spacing: 0.5px;
    text-transform: uppercase;
}

.product-image {
    width: 100%;
    aspect-ratio: 1/1;
    overflow: hidden;
    background-color: #f8f8f8;
    position: relative;
}

.product-image.vertical {
    aspect-ratio: 3/4;
}

.product-image.horizontal {
    aspect-ratio: 4/3;
}

.product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.product-card:hover .product-image img {
    transform: scale(1.08);
}

.product-title {
    font-size: 1.05rem;
    font-weight: 500;
    margin-bottom: 0.4rem;
    padding: 1rem 1.2rem 0.4rem;
    color: #2c2c2c;
    letter-spacing: 0.3px;
}

.product-status {
    font-size: 0.85rem;
    color: #999;
    padding: 0 1.2rem 1.2rem;
    font-weight: 400;
}

/* Additional Information */
.additional-info {
    margin-top: 5rem;
    padding: 3.5rem;
    background: linear-gradient(to bottom, #fafafa 0%, #f5f5f5 100%);
    border-radius: 12px;
    border: 1px solid #e8e8e8;
}

.additional-info h2 {
    font-size: 1.6rem;
    margin-bottom: 2.5rem;
    letter-spacing: 3px;
    font-weight: 400;
    color: #2c2c2c;
}

.info-content p {
    margin-bottom: 1.5rem;
    line-height: 1.9;
    color: #555;
    font-size: 0.95rem;
}

/* Footer */
.footer {
    background-color: #f5f5f5;
    padding: 3rem 2rem;
    margin-top: 4rem;
    border-top: 1px solid #e0e0e0;
}

.footer-content {
    max-width: 1400px;
    margin: 0 auto;
    text-align: center;
}

.footer-content p {
    margin-bottom: 1rem;
    color: #666;
}

.social-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
}

.social-links a {
    color: #333;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s;
}

.social-links a:hover {
    color: #667eea;
}

/* Responsive Design */
@media (max-width: 1400px) {
    .products-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: 1.8rem;
    }
}

@media (max-width: 1024px) {
    .content-wrapper {
        grid-template-columns: 220px 1fr;
        gap: 2rem;
    }

    .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
}

@media (max-width: 768px) {
    .nav-menu {
        display: none;
    }

    .hero-content h1 {
        font-size: 2rem;
    }

    .hero-subtitle {
        font-size: 0.9rem;
    }

    .content-wrapper {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .filters-sidebar {
        position: static;
        border-bottom: 2px solid #e0e0e0;
        padding-bottom: 2rem;
    }

    .products-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }

    .additional-info {
        padding: 2rem 1.5rem;
    }
}

@media (max-width: 480px) {
    .products-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    .hero {
        padding: 4rem 1rem;
    }

    .main-content {
        padding: 0 1rem;
    }
}
